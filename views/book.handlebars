<main class="container mb-5">

    <div class="row">
        <div class="col-md-12 text-center mt-5">
            <h1>{{this.title}}</h1>
            <p>by
                <span>
                    <a href="#">{{this.author}}</a>
                </span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
            </p>
            <hr class="mt-3">

        </div>
    </div>

    <div class="row mt-3">

        <div class="col-md-4 text-center book">
            <img src="{{this.image}}" class="img-fluid" alt="I am a book cover picture"> {{!--
            <img src="assets/img/fantasy-book.jpg" class="img-fluid" alt="I am a book cover picture"> --}}
        </div>
        <div class="col-md-8 border-lv mb-5">
            <p class="book-summary">
                <b class="text-uppercase mr-2">Summary:</b> {{this.summary}}</p>
            <p>
                <b class="text-uppercase">ISBN: </b>
                <span id="isbn">{{this.industryIdentifier}}</span>
            </p>
            <div class="row">

                <div class="col-md-12 col-lg-6 mb-3">
                    <div>
                        <span class="on-stock">{{this.numShelved}}</span>
                        <b>On Shelves</b>
                    </div>
                </div>
                <div class="col-md-12 col-lg-6 mb-3">
                    <span>
                        <a class="favorite-book" href="#">
                            <i class="fa fa-heart-o" aria-hidden="true" data-mediaId={{this.id}} data-userId={{this.userId}}></i>Add to Favorites</a>
                    </span>
                </div>
            </div>
            <div class="row action-book-row">
                <div id="reserveBook" class="col-md-12 mt-3 visible">
                    <!-- <form action="/" method="POST"> -->
                    <form>
                        <button id="action-btn-reserve" class="btn btn-success text-uppercase" type="submit" data-mediaid={{this.id}} data-userId={{this.userId}}>Reserve Book
                        </button>
                    </form>
                </div>
                <div id="addToWhishList" class="col-md-12 mt-3 invisible">
                    <form action="/" method="POST">
                        <button id="action-btn" class="btn btn-success text-uppercase" type="submit" data-mediaId={{this.id}} data-userId={{this.userId}}>Add to Waitlist
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</main>